{
  "name": "hanzilevel",
  "version": "1.0.0",
  "description": "Hanzi Level Up in-action",
  "main": "dist/main.bundle.js",
  "author": "Pacharapol Withayasakpunt",
  "license": "MIT",
  "dependencies": {
    "@types/xregexp": "^3.0.29",
    "bootstrap": "^4.2.1",
    "chinese-to-pinyin": "^0.1.8",
    "electron-is-running-in-asar": "^1.0.0",
    "jquery": "^3.3.1",
    "jquery-contextmenu": "^2.8.0",
    "popper.js": "^1.14.6",
    "pug": "^2.0.3",
    "sqlite3": "^4.0.6",
    "xregexp": "^4.2.4"
  },
  "devDependencies": {
    "@types/sqlite3": "^3.1.3",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5",
    "file-loader": "^3.0.1",
    "node-sass": "^4.11.0",
    "raw-loader": "^1.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && webpack --watch --config ./webpack.dev.js --progress --colors",
    "compile": "rimraf dist && webpack --config ./webpack.prod.js --progress --colors",
    "build": "rimraf build && yarn run compile && electron-builder",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "io.github.patarapolw.hanzilevel",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  }
}
